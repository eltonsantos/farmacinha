<p id="notice"><%= flash[:notice] %></p>

<h1>Categorias</h1>

<%= link_to 'Voltar', root_path %>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Editar', edit_category_path(category) %></td>
        <td><%= link_to 'Remover', category, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_category_path, class: "btn btn-primary" do %>
  <i class="fas fa-check-circle"></i>
  Nova Categoria
<% end %>