<p id="notice"><%= flash[:notice] %></p>

<h1>Categorias</h1>

<%= link_to 'Voltar', root_path %>

<% if @categories.any? %>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>

          <% if can? :manage, category %>
            <td>
              <%= link_to edit_category_path(category) do %>
                <i class="fas fa-edit"></i>
              <% end %>
            </td>
          <% end %>

          <% if can? :manage, category %>
            <td>
              <%= link_to category, method: :delete, data: { confirm: 'Tem certeza?' } do %>
                <i class="fas fa-times-circle red"></i>
              <% end %>
            </td>
          <% end %>

        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  Não há categoria cadastrada
<% end %>

<br>

<%= link_to new_category_path, class: "btn btn-success btn-margin" do %>
  Nova Categoria
<% end %>