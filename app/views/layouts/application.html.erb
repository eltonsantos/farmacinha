<!DOCTYPE html>
<html>
  <head>
    <title>Farmacinha | Elton Santos</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>  
      <div class="app">
        <div class="main-wrapper">
          <section class="section pb-0 bg-gradient-info">
            <nav class="navbar navbar-expand-lg navbar-dark bg-gradient-info">
              <div class="container justify-content-center mt-5">
                <%= image_tag("logo.svg")%>
              </div>
            </nav>
            <main class="container card shadow shadow-lg--hover mt-3">
              <div class="btn-margin-top">
                <%=link_to destroy_user_session_path, method: :delete, class: "float-end btn-sign-out" do %>
                  <i class="fas fa-sign-out-alt"></i>
                  Sair
                <% end %>
              </div>
              <%= yield %>
            </main>
          </section>
        </div>
      </div>
    <% else %>
      <%= yield %>  
    <% end %>
  </body>
</html>
